<%- include ("partials/header") %>
<div>
    <div class="soleil" id="soleil"></div>
</div>
<div id="background" class="background"></div>
<div id="fbackground" class="fbackground"></div>
<main class="container_list" uk-filter="target: .js-filter">
    <nav class="breadcrumb-content" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Accueil</a></li>
          <li class="breadcrumb-item active" aria-current="page">Liste des Ecoles magiques</li>
        </ol>
      </nav>

      <div class="borderTitle">
        <h2 class="h2_title">Les Ecoles magiques de l'univers d'Harry Potter</h2>
           
     </div>

    
    <ul class="js-filter uk-child-width-1-2 uk-child-width-1-3@m uk-text-center card-list da-thumbs" id="da-thumbs">
        <% for (let school of schools) { %>
        <li class="card-list-global">
            <a href="/school/<%= school.id %>" class="card text-white mb-3" id="card">
                <h3 class="card-header"><%=school.name %></h3>
                <article class="card-body">
                <img src="/images/<%= school.name %>.png" class="schools_thumbnails" alt="Blason de l'Ã©cole <%=school.name %>">
                    
                </article>
            </a>
        </li>
    <% } %>
     </ul>
     <script type="text/javascript">
        $(function() {

            $(' #da-thumbs > li ').each( function() { $(this).hoverdir({
                hoverDelay : 75
            }); } );

        });
    </script>
</main>
<!-- End of main content -->
<%- include('partials/footer') %>
